		bt_s_l: bt_s_l {
			label = "Bt Sel + layer";
			compatible = "zmk,behavior-macro-two-param";
			#binding-cells = <2>;
			wait-ms = <100>;
			bindings
				= <&macro_param_1to2>
				, <&bt BT_SEL MACRO_PLACEHOLDER>
				, <&macro_param_2to1>
				, <&macro_pause_for_release>
				, <&to MACRO_PLACEHOLDER>
				;
		};
		c_a_h: c_a_h {
			label = "Ctrl_Alt_Home";
			compatible = "zmk,behavior-macro";
			#binding-cells = <0>;
			wait-ms = <50>;
			bindings
				= <&macro_press &kp LCTRL &kp LALT>
				, <&macro_tap &kp HOME>
				, <&macro_release &kp LCTRL &kp LALT>
				, <&macro_press &kp LALT>
				, <&macro_tap &kp TAB>
				, <&macro_pause_for_release>
				, <&macro_release &kp LALT>
				;
		};
		grv_out: se_grave_output {
			label = "Grave_output";
			compatible = "zmk,behavior-macro";
			#binding-cells = <0>;
			bindings
				= <&macro_tap &kp SE_GRV>
				, <&macro_tap &kp SPACE>
				;
		};
		tilde_out: se_tilde_output {
			label = "Tilde_output";
			compatible = "zmk,behavior-macro";
			#binding-cells = <0>;
			bindings
				= <&macro_tap &kp SE_TILD>
				, <&macro_tap &kp SPACE>
				;
		};
		hat_out: se_hat_output {
			label = "Hat_output";
			compatible = "zmk,behavior-macro";
			#binding-cells = <0>;
			bindings
				= <&macro_tap &kp SE_HAT>
				, <&macro_tap &kp SPACE>
				;
		};

	behaviors {
		qlt: quick_layer_tap {
			compatible = "zmk,behavior-hold-tap";
			label = "QUICK_LAYER_TAP";
			#binding-cells = <2>;
			flavor = "hold-preferred";
			quick-tap-ms = <200>;
			tapping-term-ms = <125>;
			bindings = <&mo>, <&kp>;
		};

		// Swapper for smart alt+tab
		swapper: swapper {
			compatible = "zmk,behavior-tri-state";
			label = "SWAPPER";
			#binding-cells = <0>;
			bindings = <&kt LALT>, <&kp TAB>, <&kt LALT>;
			ignored-key-positions = <12 24>;
		};

		rot_kp: behavior_sensor_rotate_kp {
			compatible = "zmk,behavior-sensor-rotate-var";
			label = "ENC_KP";
			#sensor-binding-cells = <2>;
			bindings = <&kp>, <&kp>;
		};

		vol_encoder: vol_encoder {
			compatible = "zmk,behavior-sensor-rotate";
			label = "VOL_ENCODER";
			#sensor-binding-cells = <0>;
			bindings = <&kp C_VOL_DN>, <&kp C_VOL_UP>;
		};
	};


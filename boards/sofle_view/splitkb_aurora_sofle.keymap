#define FN 5 		// Functions 

// nice!view
&nice_view_spi { cs-gpios = <&gpio1 1 GPIO_ACTIVE_HIGH>; };

&left_encoder {
	/delete-property/ resolution;
	steps = <72>;
};
&right_encoder {
	/delete-property/ resolution;
	steps = <72>;
};

&mt {
	retro-tap;
};

/ {
	sensors {
		compatible = "zmk,keymap-sensors";
		sensors = <&left_encoder &right_encoder>;
		triggers-per-rotation = <36>;
	};

	macros {
